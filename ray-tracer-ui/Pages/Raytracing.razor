@page "/raytracing"

@inherits RayTracingComponent;
<EditForm Model="@cameraParameters" OnValidSubmit="@Start">

<table>
<tr><th>Scene</th><td colspan="2">
<InputSelect id="scene" @bind-Value="SceneName">
@foreach(var type in RayTracingService.GetScenes())
{
    <option>@type</option>
}
</InputSelect>


</td></tr>
<tr><th/><th>Camera</th><th>Look At</th></tr>
<tr>
    <th>X</th>
    <td><InputNumber id="camX" @bind-Value="cameraParameters.CameraX" /></td>
    <td><InputNumber id="LookX" @bind-Value="cameraParameters.LookX" /></td>
</tr><tr> 
     <th>Y</th>
    <td><InputNumber id="camY" @bind-Value="cameraParameters.CameraY" /></td>
    <td><InputNumber id="LookY" @bind-Value="cameraParameters.LookY" /></td>
</tr><tr>
    <th>Z</th>
    <td><InputNumber id="camZ" @bind-Value="cameraParameters.CameraZ" /></td>
    <td><InputNumber id="LookZ" @bind-Value="cameraParameters.LookZ" /></td>
</tr><tr>
    <th/><th>Width</th>
    <th>Height</th>
</tr><tr>
    <th>Image</th>
    <td><InputNumber id="Width" @bind-Value="cameraParameters.Width" /></td>
    <td><InputNumber id="Height" @bind-Value="cameraParameters.Height" /></td>
</tr><tr>
    <th>Threads</th>
    <td><InputNumber id="NbThreads" @bind-Value="renderParameters.NbThreads" /></td>
    <td><button class="btn btn-primary" type="submit">Fiat Lux !</button>
        <button class="btn btn-primary" type="button" @onclick="@Stop">Stop</button>
</td>
</tr>
</table>
</EditForm>

<hr/>
<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="@progressValue" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<table>
<button class="btn btn-primary" type="button" @onclick="@Display">Display</button>
<tr><th>Time</th><td>@time</td></tr>
<tr><th>Progress</th><td>@progress</td></tr>
<tr><th>Speed</th><td>@speed</td></tr>
</table>
<hr/>
<img src="@img" alt="No img"/>
